                    @Html.TextBoxFor(model => model.Name, new {onchange = "", type = "file", @class = "form-control"})
                </div>
            </div>
            
            

                <div class="form-group">
                    @Html.LabelFor(model => model.BrandImage, htmlAttributes: new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @*   @Html.TextBoxFor(model => model.ProductImage,  new { onchange = "",id = "file", type = "file", @class = "form-control"  })
                    *@
                        <input type="file" name="uploadImages" multiple="multiple" class="input-files"/>
                        </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default"/>
                    </div>
                </div>
            </div>



            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
      
  
